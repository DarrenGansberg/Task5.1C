<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/place_to_go_container"
    android:layout_height="100dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="16dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/places_to_go_image_view"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_gravity="start"
        android:scaleType="fitXY"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/place_to_go_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arbutus"
            android:text="@string/destination_title_default"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/place_to_go_description_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lineSpacingExtra="3sp"
            android:scrollHorizontally="false"
            android:text="@string/destination_description_default"
            android:textColor="@color/text_color"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>